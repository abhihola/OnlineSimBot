{
  "name": "OnlineSimBot",
  "description": "A bot for online simulation tasks.",
  "repository": "https://github.com/abhihola/OnlineSimBot",
  "keywords": ["python", "bot", "automation", "Heroku"],
  "stack": "heroku-22",
  "env": {
    "TOKEN": {
      "description": "The authentication token for the bot.",
      "required": true
    },
    "DEBUG": {
      "description": "Enable debug mode.",
      "value": "False",
      "required": false
    }
  },
  "buildpacks": [
    {
      "url": "heroku/python"
    }
  ],
  "formation": {
    "web": {
      "quantity": 1,
      "size": "free"
    }
  },
  "addons": [],
  "scripts": {
    "postdeploy": "python main.py"
  }
}
